<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.tugraz.ist.swe.teachingassistant">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
            <activity android:name=".LearningInterfaceActivity" />
            <activity android:name=".LearningListActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddVocabActivity">
        </activity>
        <activity android:name=".ImportActivity"
            android:label="TA - Importer"
            android:theme="@style/Theme.AppCompat.Dialog"
                  android:excludeFromRecents="true">
        </activity>
        <activity android:name=".ExportActivity"
                  android:label="@string/export_title"
                  android:theme="@style/Theme.AppCompat.Dialog"
                  android:excludeFromRecents="true">
        </activity>
        <activity android:name=".VocabularyActivity"></activity>
    </application>

</manifest>