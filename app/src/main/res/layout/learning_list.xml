<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearningListActivity">

    <TextView
        android:id="@+id/learningTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:text="Learning"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />

    <ListView
        android:id="@+id/vocabList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/languageTitle"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language"
        android:layout_below="@+id/learningTitle"
        android:id="@+id/languageTitle"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/btn_changeLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change language"
        android:layout_alignRight="@id/learningTitle"
        android:layout_below="@id/learningTitle"
        android:layout_marginTop="20dp"
        android:textSize="12dp"
        android:layout_marginRight="30dp"
        />


</RelativeLayout>