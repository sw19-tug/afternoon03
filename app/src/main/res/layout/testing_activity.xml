<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="56dp"
        android:text="Progress:"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/tv_fraction_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="X / 10"
        android:layout_alignBottom="@id/tv_progress"
        android:layout_toEndOf="@id/tv_progress"
    />

    <TextView
        android:id="@+id/tv_providedLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EN"
        android:textSize="28dp"
        android:layout_above="@id/tv_questionLanguage"
        android:maxLines="1"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="10dp"
        android:layout_alignBottom="@id/tv_providedWord"
        />

    <TextView
        android:id="@+id/tv_providedWord"
        android:layout_above="@id/et_requestedWord"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="question"
        android:layout_marginStart="15dp"
        android:textColor="@color/colorBlack"
        android:textSize="28dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_providedLanguage"
        android:layout_alignStart="@id/et_requestedWord"/>

    <TextView
        android:id="@+id/tv_questionLanguage"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/et_requestedWord"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="FI"
        android:textSize="28dp"
        android:layout_marginHorizontal="10dp"
        android:maxLines="1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"


        />

    <EditText
        android:id="@+id/et_requestedWord"
        android:layout_above="@id/btn_testing_next"
        android:hint="answer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="answer"
        android:textSize="28dp"/>

    <Button
        android:id="@+id/btn_testing_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Next"
        android:textSize="28dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>




</RelativeLayout>